 create_explosion( bazooka_damage.exp )
 create_explosion( explosion5.exp )
 shoot_particles ( bazooka_exp.obj , 100 ,  1, 0, 0, 0)
 shoot_particles ( bazooka_cluster.obj , 30 ,  1, 2, 0, 0)
 remove()
